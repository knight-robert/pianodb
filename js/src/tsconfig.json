{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": [ "ES2015.Promise", "DOM" ],
    "sourceMap": false,
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "outDir": "compiled",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/*"
  ]
}